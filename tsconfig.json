{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 12+es2020",
    "compilerOptions": {
      "lib": [
        "dom",
        "es2020",
        "es2020.promise",
        "es2020.bigint",
        "es2020.string"
      ],
      "module": "commonJs",
      "target": "es2020",
      "rootDir": "src",
      "outDir": "dist",
      "sourceMap": false,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": false,
      "experimentalDecorators": true
    },
    "exclude": ["contract","node_modules","docs"]
  }